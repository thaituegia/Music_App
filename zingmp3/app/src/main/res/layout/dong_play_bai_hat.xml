<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <RelativeLayout
        android:padding="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#ffff"
            android:textSize="17sp"
            android:layout_margin="10dp"
            android:text="1"
            android:id="@+id/textviewplaynhacindext"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <TextView
            android:id="@+id/textviewplaynhactenbaihat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dp"
            android:layout_toRightOf="@+id/textviewplaynhacindext"
            android:ellipsize="end"
            android:singleLine="true"
            android:text="Ten ca khuc"
            android:textColor="#ffff"
            android:textSize="17sp" />
        <TextView
            android:textSize="12sp"
            android:text="Ca si"
            android:layout_marginLeft="10dp"
            android:singleLine="true"
            android:textColor="#ffff"
            android:ellipsize="end"

            android:layout_toRightOf="@id/textviewplaynhacindext"
            android:layout_below="@id/textviewplaynhactenbaihat"
            android:id="@+id/textviewplaynhactencasi"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </RelativeLayout>
</RelativeLayout>