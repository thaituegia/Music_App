<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:id="@+id/imageviewbaihatyeuthich"/>
    <TextView
        android:maxLines="1"
        android:textColor="#363636"
        android:textSize="18sp"
        android:ellipsize="end"
        android:id="@+id/textviewtenbaihatyeuthich"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:layout_toRightOf="@id/imageviewbaihatyeuthich"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:textColor="#8c8a8a"
        android:layout_below="@id/textviewtenbaihatyeuthich"
        android:id="@+id/textviewtencaisibaihathot"
        android:layout_toRightOf="@id/imageviewbaihatyeuthich"
        android:singleLine="true"/>
    <ImageView
        android:id="@+id/imageviewluotthich"
        android:layout_marginRight="10dp"
        android:layout_width="30dp"
        android:layout_height="30dp"
        android:src="@drawable/iconlove"
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"/>

</RelativeLayout>