<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android" android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    >
    <ImageView
        android:id="@+id/imagesearchbaihat"
        android:layout_margin="3dp"
        android:scaleType="fitXY"
        android:layout_width="80dp"
        android:layout_height="80dp"/>
    <TextView
        android:layout_toRightOf="@+id/imagesearchbaihat"
        android:textColor="#000000"
        android:textSize="18sp"
        android:id="@+id/textviewsearchbaihat"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:layout_below="@id/textviewsearchbaihat"
        android:layout_toRightOf="@+id/imagesearchbaihat"
        android:textColor="#737373"
        android:textSize="18sp"
        android:id="@+id/textviewsearchcasi"
        android:layout_marginTop="7dp"
        android:layout_marginLeft="5dp"
        android:maxWidth="250dp"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <ImageView
        android:layout_centerVertical="true"
        android:layout_alignParentRight="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/iconlove"
        android:id="@+id/imageviewSearchluotthich"
        android:layout_width="30dp"
        android:layout_height="30dp"/>
</RelativeLayout>